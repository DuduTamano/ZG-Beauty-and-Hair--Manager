<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:padding="8dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/rubik_bold"
                android:text="מספר הזמנה:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/order_number"
                android:fontFamily="@font/rubik_bold"
                android:text="00000"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_number"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik_bold"
                android:text="מועד ההזמנה:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_number"
                android:layout_marginTop="6dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/order_time"
                android:fontFamily="@font/rubik_black"
                android:text="Today ad: 13:00: pm"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_time"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik_bold"
                android:text="שם הלקוחה:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_time"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/customer_name"
                android:fontFamily="@font/rubik_bold"
                android:text="שם הלקוח"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik_bold"
                android:text="סטטוס הזמנה:"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_customer_name"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/order_status"
                android:fontFamily="@font/rubik_bold"
                android:text="סטטוס "
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_status"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik_bold"
                android:text="כמות מוצרים:"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_order_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_status"
                android:layout_marginTop="6dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/order_items"
                android:fontFamily="@font/rubik_bold"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>